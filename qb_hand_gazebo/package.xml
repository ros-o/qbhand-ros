<package format="2">
  <name>qb_hand_gazebo</name>
  <version>3.0.3</version>
  <description>
    This package contains the Gazebo ROS control plugins for qbrobotics® SoftHand device.
  </description>
  <author>qbrobotics®</author>
  <maintainer email="alessandro.tondo@qbrobotics.com">Alessandro Tondo</maintainer>
  <license>BSD 3-Clause</license>

  <url type="bugtracker">https://bitbucket.org/qbrobotics/qbhand-ros/issues</url>
  <url type="repository">https://bitbucket.org/qbrobotics/qbhand-ros</url>
  <url type="website">http://wiki.ros.org/qb_hand_gazebo</url>

  <buildtool_depend>catkin</buildtool_depend>
  <depend>roscpp</depend>
  <depend>gazebo_ros_control</depend>
  <depend>controller_manager</depend>
  <depend>qb_device_gazebo</depend>
  <depend>qb_device_hardware_interface</depend>

  <export>
    <gazebo_ros_control plugin="${prefix}/plugin.xml"/>
  </export>

  <!--TODO: <test_depend>gtest</test_depend>-->
  <doc_depend>doxygen</doc_depend>
</package>